{
  "name": "mycompliantbusiness",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build:fe": "esbuild frontend/main.tsx --bundle --outfile=frontend/dist/app.js --format=esm --jsx=automatic --sourcemap",
    "build": "tsc -p tsconfig.json && npm run build:fe",
    "prestart": "npm run prisma:deploy",
    "start": "node --enable-source-maps dist/server.js",
    "prisma:deploy": "npm run prisma:deploy:common && npm run prisma:deploy:sessions",
    "prisma:deploy:common": "prisma migrate deploy --schema schemas/common/schema.prisma",
    "prisma:deploy:sessions": "prisma migrate deploy --schema schemas/sessions/schema.prisma",
    "postinstall": "prisma generate --schema schemas/common/schema.prisma && prisma generate --schema schemas/sessions/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.25.9",
    "prisma": "^6.15.0",
    "tsx": "^4.20.5",
    "typescript": "^5.4.0"
  }
}
